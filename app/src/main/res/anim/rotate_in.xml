<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="500">
    <rotate
        android:fromDegrees="-30"
        android:toDegrees="0"
        android:pivotY="50%"
        android:pivotX="50%" />
    <alpha
        android:fromAlpha="0.0"
        android:toAlpha="1.0" />
    <translate
        android:fromXDelta="-300"
        android:toXDelta="0"
        android:fromYDelta="-100"
        android:toYDelta="0"/>
</set>